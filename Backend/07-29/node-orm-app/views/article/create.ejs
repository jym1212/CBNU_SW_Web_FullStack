<!--우측 콘텐츠 헤더 영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>게시글 정보 관리</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/article/list">Home </a>>
            </li>
            <li>
                <a>게시글 정보 관리 </a>>
            </li>
            <li class="active">
                <strong>신규 게시글 작성</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<!--우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <form id="createForm" action="/article/create" method="post">
        <div class="ibox-content m-b-sm border-bottom">
            <!-- 글 제목 영역 -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">글 제목</label>
                        <input type="text" id="title" name="title" class="form-control">
                    </div>
                </div>
            </div>
            <!-- 글 내용 영역 -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">글 내용</label>
                        <textarea class="form-control" id="contents" name="contents" rows="10" cols="5"></textarea>
                    </div>
                </div>
            </div>
            <!-- 게시 여부 영역 -->
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">게시 여부</label>
                        <select class="form-control" id="display" name="display">
                            <option value="9">선택</option>
                            <option value="1">게시</option>
                            <option value="0">게시 안 함</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- 저장, 취소 버튼 영역 -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">저장</button>
                <a href="/article/list" class="btn btn-info">목록</a>
            </div>
        </div>
    </form>
</div>