<!-- 우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <form id="modifyForm" action="/admin/modify" method="post">

        <!-- html hidden 태그에 게시글 고유번호를 저장하고 name 속성을 지정하여 
        post 방식으로 전달 시, 게시글 고유번호도 전달 처리 -->
        <input type="hidden" id="admin_id" name="admin_id" value="">

        <div class="ibox-content m-b-sm border-bottom">
            <div class="row">
                <!-- 아이디 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">아이디</label>
                        <input type="text" id="admin_id" name="admin_id" class="form-control">
                    </div>
                </div>
                <!-- 비밀번호 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">비밀번호</label>
                        <input type="password" id="admin_pwd" name="admin_pwd" class="form-control">
                    </div>
                </div>
                <!-- 성명 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">성명</label>
                        <input type="text" id="admin_name" name="admin_name" class="form-control">
                    </div>
                </div>
            </div>
            <!-- 이메일 주소 영역 -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">이메일 주소</label>
                        <input type="text" id="admin_email" name="admin_email" class="form-control">
                    </div>
                </div>
            </div>
            <!-- 저장, 취소 버튼 영역 -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">수정</button>
                <button type="button" class="btn btn-danger" id="btnDelete">삭제</button>
                <a href="/admin/list" class="btn btn-info">목록</a>
            </div>
        </div>
    </form>
</div>

