<!-- 우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>채팅방 정보 관리</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/main">Home </a>>
            </li>
            <li>
                <a href="/channel/list">채팅방 정보 관리 </a>>
            </li>
            <li class="active">
                <strong>신규 채팅방 등록</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<!-- 우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <form id="createForm" action="/channel/create" method="post">
        <div class="ibox-content m-b-sm border-bottom">

            <!-- 채팅방 제목 영역 -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label" for="channel_name">채널명</label>
                        <input type="text" id="channel_name" name="channel_name" class="form-control">
                    </div>
                </div>
            </div>
            <!-- 채팅방 소개 영역 -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label" for="channel_desc">채널 설명</label>
                        <textarea class="form-control" id="channel_desc" name="channel_desc" rows="10" cols="5"></textarea>
                    </div>
                </div>
            </div>

            <!-- 최대 접속자 제한, 상태 코드, 분류 코드 영역 -->
            <div class="row">
                <!-- 최대 접속자 제한 영역 -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label class="control-label" for="user_limit">최대 접속자 제한수</label>
                            <input type="text" id="user_limit" name="user_limit" class="form-control">
                        </div>
                    </div>
                </div>
                <!-- 상태 코드 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="channel_state_code">상태 코드</label>
                        <select class="form-control" id="channel_state_code" name="channel_state_code">
                            <option value="9">선택</option>
                            <option value="1">사용 중</option>
                            <option value="0">사용 안 함</option>
                        </select>
                    </div>
                </div>
                <!-- 분류 코드 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="category_code">분류 코드</label>
                        <select class="form-control" id="category_code" name="category_code">
                            <option value="9">선택</option>
                            <option value="1">1:1 채팅</option>
                            <option value="2">그룹 채팅</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- 저장, 취소 버튼 영역 -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">저장</button>
                <a href="/channel/list" class="btn btn-info">목록</a>
            </div>
        </div>
    </form>
</div>

