                            <option value="1">오픈</option>
                            <option value="0">오픈 안 함</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- 저장, 취소 버튼 영역 -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">저장</button>
                <a href="/channel/list" class="btn btn-info">목록</a>
