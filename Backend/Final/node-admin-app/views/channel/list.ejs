<!-- 채팅방 정보 조회, 목록 페이지 -->

<meta>
<style></style>

<!-- 우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>채팅방 정보 관리</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/main">Home </a>>
            </li>
            <li>
                <a href="/channel/list">채팅방 정보 관리 </a>>
            </li>
            <li class="active">
                <strong>채팅방 목록 조회</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<!-- 우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">

    <!-- 조회 옵션 영역 -->
    <div class="ibox-content m-b-sm border-bottom">
        <div class="row">

            <!-- 채널명 영역 -->
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="channel_name">채널명</label>
                    <input type="text" id="channel_name" name="channel_name" class="form-control">
                </div>
            </div>
            <!-- 분류 코드 영역 -->
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="category_code">분류 코드</label>
                    <input type="text" id="category_code" name="category_code" class="form-control">
                </div>
            </div>
            <!-- 상태 여부 영역 -->
            <div class="col-sm-4">
                <div class="form-group">
                    <label class="control-label" for="channel_state_code">상태 코드</label>
                    <select id="channel_state_code" name="channel_state_code" class="form-control">
                        <option value="9" selected>전체</option>
                        <option value="1">사용 중</option>
                        <option value="0">사용 안 함</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" id="btnSearch" class="btn btn-primary">조회</button>
            <a href="/channel/create" class="btn btn-info">채팅방 등록</a>
        </div>
    </div>

    <!-- 조회 결과 목록 영역 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="table-responsive">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th width="20%">채널명</th>
                                    <th width="20%">채널 설명</th>
                                    <th width="10%">최대 접속자</th>
                                    <th width="10%">커뮤니티 고유번호</th>
                                    <th width="10%">상태 코드</th>
                                    <th width="10%">분류 코드</th>
                                    <th width="20%">등록 일시</th>
                                </tr>
                            </thead>
                            <tbody class="hoverTblBody" id="list">
                                <tr>
                                    <% for(var i=0; i<channels.length; i++){ %>
                                        <tr>
                                            <td><a href="/channel/modify/<%=channels[i].channel_id%>"><%=channels[i].channel_name%></a></td>
                                            <td><%=channels[i].channel_desc%></td>
                                            <td><%=channels[i].community_id%></td>
                                            <td><%=channels[i].user_limit%></td>
                                            <td>
                                                <% if(channels[i].channel_state_code == 1) { %>
                                                    사용 중
                                                <% } else { %>
                                                    사용 안 함
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if(channels[i].category_code == 1) { %>
                                                    1:1 채팅
                                                <% } else { %>
                                                    그룹 채팅
                                                <% } %>
                                            </td>
                                            <td><%=moment(channels[i].reg_date).format('YYYY-MM-DD HH:mm')%></td>
                                        </tr>
                                        <% } %>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

<script></script>