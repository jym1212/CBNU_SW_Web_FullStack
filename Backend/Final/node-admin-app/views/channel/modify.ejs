<!-- 우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>채팅방 정보 관리</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/main">Home </a>>
            </li>
            <li>
                <a href="/channel/list">채팅방 정보 관리 </a>>
            </li>
            <li class="active">
                <strong>기존 채팅방 확인 및 수정/삭제</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<!-- 우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <form id="modifyForm" action="/channel/modify" method="post">

        <!-- html hidden 태그에 게시글 고유번호를 저장하고 name 속성을 지정하여 
                     post 방식으로 전달 시, 게시글 고유번호도 전달 처리 -->
        <input type="hidden" id="channel_id" name="channel_id" value="">

        <div class="ibox-content m-b-sm border-bottom">
            <!-- 글 제목 영역 -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">채팅방 제목</label>
                        <input type="text" id="title" name="title" value="" class="form-control">
                    </div>
                </div>
            </div>
            <!-- 글 내용 영역 -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label class="control-label">채팅방 소개</label>
                        <textarea class="form-control" id="contents" name="contents" rows="10" cols="5"></textarea>
                    </div>
                </div>
            </div>
            <!-- 게시 여부 영역 -->
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">게시 여부</label>
                        <select class="form-control" id="display" name="display">
                            <option value="9">선택</option>
                            <option value="1">게시</option>
                            <option value="0">게시 안 함</option>
                        </select>
                    </div>
                </div>
            </div>
            <!-- 저장, 취소 버튼 영역 -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">수정</button>
                <button type="button" class="btn btn-danger" id="btnDelete">삭제</button>
                <a href="/channel/list" class="btn btn-info">목록</a>
            </div>
        </div>
    </form>
</div>

