<!-- 사용자 계정 정보 조회, 목록 페이지 -->

<meta>
<style></style>

<!-- 우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>사용자 계정 정보 관리</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/main">Home </a>>
            </li>
            <li>
                <a href="/member/list">사용자 계정 정보 관리 </a>>
            </li>
            <li class="active">
                <strong>사용자 계정 정보 목록 조회</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<!-- 우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">

    <!-- 조회 옵션 영역 -->
    <form action="/member/list" method="post">
        <div class="ibox-content m-b-sm border-bottom">
            <div class="row">
                <!-- 사용자 메일 주소 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="email">사용자 메일 주소</label>
                        <input type="text" id="email" name="email" value="<%=searchOption.email%>" class="form-control">
                    </div>
                </div>
                <!-- 사용자 이름 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="name">사용자 이름</label>
                        <input type="text" id="name" name="name" value="<%=searchOption.name%>" class="form-control">
                    </div>
                </div>
                <!-- 사용 여부 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="use_state_code">이용 상태</label>
                        <select id="use_state_code" name="use_state_code" class="form-control">
                            <option value="9" <% if(searchOption.use_state_code == "9"){ %> selected <% } %> >전체</option>
                            <option value="0" <% if(searchOption.use_state_code == "0"){ %> selected <% } %> >허용 대기</option>
                            <option value="1" <% if(searchOption.use_state_code == "1"){ %> selected <% } %> >사용 중</option>
                            <option value="2" <% if(searchOption.use_state_code == "2"){ %> selected <% } %> >탈퇴 처리</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" id="btnSearch" class="btn btn-primary">조회</button>
            </div>
        </div>
    </form>

    <!-- 조회 결과 목록 영역 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="table-responsive">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th width="10%">회원명</th>
                                    <th width="20%">메일 주소</th>
                                    <th width="20%">전화번호</th>
                                    <th width="10%">생년월일</th>
                                    <th width="10%">가입유형 코드</th>
                                    <th width="10%">이용 상태</th>
                                    <th width="20%">등록 일시</th>
                                </tr>
                            </thead>
                            <tbody class="hoverTblBody" id="list">
                                <tr>
                                    <% for(var i=0; i<members.length; i++){ %>
                                        <tr>
                                            <td><a href="/member/modify/<%=members[i].member_id%>"><%=members[i].name%></a></td>
                                            <td><%=members[i].email%></td>
                                            <td><%=members[i].telephone%></td>
                                            <td><%=members[i].birth_date%></td>
                                            <td>
                                                <% if(members[i].entry_type_code == 0) { %>
                                                    직접 가입
                                                <% } else { %>
                                                    페이스북 SNS
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if(members[i].use_state_code == 0) { %>
                                                    허용 대기
                                                <% } else if(members[i].use_state_code == 1) { %>
                                                    사용 중
                                                <% } else { %>
                                                    탈퇴 처리
                                                <% } %>
                                            </td>
                                            <td><%=moment(members[i].entry_date).format('YYYY-MM-DD HH:mm')%></td>
                                        </tr>
                                        <% } %>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

<script></script>