<!-- 기존 사용자 정보 확인 및 수정, 삭제 페이지 -->

<meta>
<style></style>

<!-- 우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>사용자 계정 정보 관리</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/main">Home </a>>
            </li>
            <li>
                <a href="/member/list">사용자 계정 정보 관리 </a>>
            </li>
            <li class="active">
                <strong>기존 사용자 수정</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<!-- 우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">
    <form id="modifyForm" action="/member/modify" method="post">

        <!-- html hidden 태그에 게시글 고유번호를 저장하고 name 속성을 지정하여 
        post 방식으로 전달 시, 게시글 고유번호도 전달 처리 -->
        <input type="hidden" id="member_id" name="member_id" value="<%=member.member_id%>">

        <div class="ibox-content m-b-sm border-bottom">
            <!-- 메일주소, 비밀번호, 이름 -->
            <div class="row">
                <!-- 메일주소 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="email">사용자 메일주소</label>
                        <input type="text" id="email" name="email" readonly value="<%=member.email%>" class="form-control">
                    </div>
                </div>
                <!-- 비밀번호 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="member_password">사용자 비밀번호</label>
                        <input type="password" id="member_password" name="member_password" value="<%=member.member_password%>" class="form-control">
                    </div>
                </div>
                <!-- 이름 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="name">사용자 이름</label>
                        <input type="text" id="name" name="name" value="<%=member.name%>" class="form-control">
                    </div>
                </div>
            </div>
        
            <!-- 이미지 경로, 전화번호, 생년월일 -->
            <div class="row">
                <!-- 프로필 이미지 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="profile_img_path">이미지 경로</label>
                        <input type="text" id="profile_img_path" name="profile_img_path" value="<%=member.profile_img_path%>" class="form-control">
                    </div>
                </div>
                <!-- 전화번호 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="telephone">전화번호</label>
                        <input type="text" id="telephone" name="telephone" value="<%=member.telephone%>" class="form-control">
                    </div>
                </div>
                <!-- 생년월일 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="birth_date">생년월일</label>
                        <input type="text" id="birth_date" name="birth_date" value="<%=member.birth_date%>" class="form-control">
                    </div>
                </div>
            </div>

            
            <div class="row">
                <!-- 가입유형 코드 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="entry_type_code">가입유형 코드</label>
                        <select class="form-control" id="entry_type_code" name="entry_type_code">
                            <option value="9" <% if(member.entry_type_code=="9" ){ %> selected <% } %> >선택</option>
                            <option value="0" <% if(member.entry_type_code=="0" ){ %> selected <% } %> >직접 가입</option>
                            <option value="1" <% if(member.entry_type_code=="1" ){ %> selected <% } %> >페이스북 SNS</option>
                        </select>
                    </div>
                </div>
                <!-- 이용상태 영역 -->
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="use_state_code">이용 상태</label>
                        <select class="form-control" id="use_state_code" name="use_state_code">
                            <option value="9" <% if(member.use_state_code=="9" ){ %> selected <% } %> >선택</option>
                            <option value="0" <% if(member.use_state_code=="0" ){ %> selected <% } %> >허용 대기</option>
                            <option value="1" <% if(member.use_state_code=="1" ){ %> selected <% } %> >사용 중</option>
                            <option value="2" <% if(member.use_state_code=="2" ){ %> selected <% } %> >탈퇴 처리</option>
                        </select>
                    </div>
                </div>
            
                <div class="col-sm-4">
                </div>
            </div>


            <!-- 저장, 취소 버튼 영역 -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">수정</button>
                <button type="button" class="btn btn-danger" id="btnDelete">삭제</button>
                <a href="/member/list" class="btn btn-info">목록</a>
            </div>
        </div>
    </form>
</div>

<script>
    $("#btnDelete").click(function () {
        if (confirm("정말로 삭제하시겠습니까?")) {
            location.href = "/member/delete?id=<%=member.member_id%>";
        }
    });
</script>