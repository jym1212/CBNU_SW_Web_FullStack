<!-- 게시글 정보 조회, 목록 페이지 -->

<meta>
<style></style>

<!-- 우측 콘텐츠 헤더영역 -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>게시글 정보 관리</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/main">Home </a>>
            </li>
            <li>
                <a href="/article/list">게시글 정보 관리 </a>>
            </li>
            <li class="active">
                <strong>게시글 정보 목록 조회</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<!-- 우측 콘텐츠 영역 -->
<div class="wrapper wrapper-content">

    <!-- 조회 옵션 영역 -->
    <form action="/article/list" method="post">
        <div class="ibox-content m-b-sm border-bottom">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="title">게시글 제목</label>
                        <input type="text" id="title" name="title" class="form-control">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="ip_address">IP주소</label>
                        <input type="text" id="ip_address" name="ip_address" class="form-control">
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label" for="is_display_code">게시 여부</label>
                        <select id="is_display_code" name="is_display_code" class="form-control">
                            <option value="9" selected>전체</option>
                            <option value="1">게시함</option>
                            <option value="0">게시 안 함</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="button" id="btnSearch" class="btn btn-primary">조회</button>
                <a href="/article/create" class="btn btn-info">신규 게시글</a>
            </div>
        </div>
    </form>

    <!-- 조회 결과 목록 영역 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="table-responsive">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th width="10%">게시글 번호</th>
                                    <th width="20%">제목</th>
                                    <th width="30%">내용</th>
                                    <th width="10%">IP 주소</th>
                                    <th width="10%">조회수</th>
                                    <th width="10%">게시 여부</th>
                                    <th width="10%">등록 일시</th>
                                </tr>
                            </thead>
                            <tbody class="hoverTblBody" id="list">
                                <tr>
                                    <% for(var i=0; i<articles.length; i++){ %>
                                        <tr>
                                            <td><a href="/article/modify/<%=articles[i].article_id%>"><%=articles[i].article_id%></a></td>
                                            <td><%=articles[i].title%></td>
                                            <td><%=articles[i].contents%></td>
                                            <td><%=articles[i].ip_address%></td>
                                            <td><%=articles[i].view_count%></td>
                                            <td>
                                                <% if(articles[i].is_display_code == 1) { %>
                                                    게시함
                                                <% } else { %>
                                                    게시 안 함
                                                <% } %>
                                            </td>
                                            <td><%=moment(articles[i].reg_date).format('YYYY-MM-DD HH:mm')%></td>
                                        </tr>
                                    <% } %>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

<script></script>

